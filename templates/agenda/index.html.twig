{% extends 'base.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/agenda.css') }}" />
{% endblock %}

{% block body %}
    <script>
        $("#colour").change(function(event) {
            console.log($(this).val());
            $("#color_front").css('background-color',$(this).val());
        });

        $("#color_front").click(function(event) {
            $("#colour").click();
        });
    </script>
    <h1 class="titre">Agenda</h1>
    <div class="agenda-container">
            <div class="task-details">
                <div class="color-input-wrapper">
                    <input type="color" value="#2ca9ba">
                </div>
                <h3>{{ elements[0].titre }}</h3>
                <p>Matière: {{ elements[0].code }}</p>
                <p>Type : {{ elements[0].type }}</p>
                <p>Date de début: {{ elements[0].date_debut }}</p>
                <p>Date et heure de rendu: {{ elements[0].date_rendu }}</p>
                <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-success" style="width: 100%">100%</div>
                </div>
            </div>
    </div>
    <div class="agenda-container">
            <div class="task-details">
                <div class="color-input-wrapper">
                    <input type="color" value="#cf94ff">
                </div>
                <h3>{{ elements[1].titre }}</h3>
                <p>Matière: {{ elements[1].code }}</p>
