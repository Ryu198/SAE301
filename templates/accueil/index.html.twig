{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}" />
{% endblock %}

{% block body %}
    <div class="container main-container">
        <div class="content-area">

            <div class="row">
            <div class="col">
            <!-- Weekly Report -->
            <div class="weekly-report-card">
                <div class="card-header">
                    <img src="{{ asset('path/to/your/icon.png') }}" alt="Rapport Icone" class="report-icon">
                    <h2>Rapport hebdomadaire</h2>
                </div>
                <hr>
                <div class="dropstart">
                    <button type="button" data-bs-toggle="dropdown" aria-expanded="false" class="btn btn-secondary dropdown-toggle position-relative">
                        Notification(s)
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        3
                <span class="visually-hidden">unread messages</span>
                </span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><span class="dropdown-item-text">Rendu à rendre Aujourd'hui à 00:00</span></li>
                        <li><span class="dropdown-item-text">Rendu à rendre Demain à 00:00</span></li>
                        <li><span class="dropdown-item-text">Rendu à rendre Samedi à 00:00</span></li>
                    </ul>
                </div>
                <div class="card-content">
                    <div class="graph-placeholder">
                        <!-- Vous intégrerez ici le graphique avec une librairie ou une image -->
                    </div>
                    <div class="task-summary">
                        <span>3 Tâches</span>
                        <span>Les 7 prochain jours</span>
                    </div>
                </div>
            </div>
            </div>

             <div class="col">
                 <div class="container search-bar">
                     <input placeholder="Rercherchez une tâche" type="text" class="form-control"/>
                     <button type="submit" id="searchButton">Rechercher</button>
                 </div>
            <!-- Tasks for Today -->
            <div class="task-block">
                <div class="task-date">
                    <span>Aujourd'hui</span>
                    <span>01 Janv.</span>
                </div>
                <div class="task-details">
                    <div class="alert alert-danger" role="alert">
                        Attention ! Ce rendu est a rendre aujourd'hui !
                    </div>
                    <div class="color-input-wrapper">
                        <input type="color" value="#2ca9ba">
                    </div>
                    <h3>WR000 - Matière</h3>
                    <p>Rendu </p>
                    <p>Date de début : jj/mm/aaaa</p>
                    <p>Date et heure du rendu : jj/mm/aaaa à 00:00</p>
                </div>
                <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-success" style="width: 100%">100%</div>
                </div>
                <span class="badge rounded-pill text-bg-success">Success</span>
                <div class="task-actions">
                    <a class="info-button" href="{{ path('app_agenda') }}">Voir plus</a>
                    <button class="menu-button">⋮</button>
                </div>
                <div class="task-footer">
                    <button class="add-task-button">+ Tâche</button>
                </div>
            </div>

            <!-- Tasks for Tomorrow -->
            <div class="task-block">
                <div class="task-date">
                    <span>Demain</span>
                    <span>02 Janv.</span>
                </div>
                <div class="task-details">
                    <div class="alert alert-warning" role="alert">
                        L'échance de rendu arrive bientôt à son terme !
                    </div>
                    <div class="color-input-wrapper">
                        <input type="color" value="#cf94ff">
                    </div>
                    <h3>WR000 - Matière</h3>
                    <p>Rendu </p>
                    <p>Date de début : jj/mm/aaaa</p>
                    <p>Date et heure du rendu : jj/mm/aaaa à 00:00</p>
                </div>
                <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-success" style="width: 80%">80%</div>
                </div>
                <div class="task-actions">
                    <a class="info-button" href="{{ path('app_agenda') }}">Voir plus</a>
                    <button class="menu-button">⋮</button>
                </div>
                <div class="task-footer">
                    <button class="add-task-button">+ Tâche</button>
                </div>
            </div>
           </div>
        </div>
    </div>
{% endblock %}

