{% extends 'base.html.twig' %}

{% block title %}Publier un nouveau devoir{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/publier.css') }}" />
{% endblock %}

{% block body %}
    <div class="publish-assignment-container">
        <h1>Publier un nouveau devoir</h1>
        <form method="post" enctype="multipart/form-data">
            <div id="flash-messages">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <div class="form-group">
                <label for="assignment_type">Type de devoir</label>
                <select id="assignment_type" name="assignment_type">
                    <option value="">Sélectionner un type</option>
                    <option value="rendu">Rendu</option>
                    <option value="exercice">Exercice</option>
                    <option value="rendusae">Rendu SAE</option>
                    <option value="partiel">Partiel</option>
                </select>
            </div>

            <div class="form-group">
                <label for="subject">Matière</label>
                <input type="text" id="subject" name="subject" placeholder="ex: WR000-Matière">
            </div>

            <div class="form-group">
                <label for="title">Intitulé du devoir</label>
                <input type="text" id="title" name="title" placeholder="ex: TP final scss">
            </div>

            <div class="form-group">
                <label for="start_date">Date de début</label>
                <input type="date" id="start_date" name="start_date">
            </div>

            <div class="form-group">
                <label for="due_date">Date de rendu</label>
                <input type="date" id="due_date" name="due_date">
            </div>

            <div class="form-group">
                <label for="due_time">Heure de rendu</label>
                <input type="time" id="due_time" name="due_time">
            </div>

            <div class="form-group">
                <label for="description">Explications</label>
                <textarea id="description" name="description" placeholder="Description du devoir..."></textarea>
            </div>

            <div class="form-group">
                <label for="file_upload">Joindre des documents</label>
                <input type="file" id="file_upload" name="file_upload[]" multiple>
            </div>

            <button type="submit">Ajouter</button>
        </form>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        // Attendre que le DOM soit entièrement chargé
        document.addEventListener('DOMContentLoaded', () => {
            // Sélectionner tous les messages flash
            const flashMessages = document.querySelectorAll('#flash-messages .alert');

            // Si des messages flash sont présents
            if (flashMessages.length > 0) {
                // Attendre 3 secondes avant de les cacher
                setTimeout(() => {
                    flashMessages.forEach(flashMessage => {
                        flashMessage.style.display = 'none';
                    });
                }, 3000);
            }
        });
    </script>
{% endblock %}