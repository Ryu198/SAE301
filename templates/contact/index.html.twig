{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/inscription.css') }}">
{% endblock %}
{% block title %}Contactez-nous{% endblock %}

{% block body %}
    <div class="container container-inscription">
    <h2>Besoin d'aide ?</h2>
        <!-- Section FAQ -->
        <div class="row">
        <section class="col faq">
            <h2>Questions fréquentes</h2>
            <div class="faq-item">
                <h3>Comment ajouter un devoir ?</h3>
                <p>Allez dans votre profil, sélectionnez “ajouter un devoir”.
                    <br>Remplissez les informations demandées et appuyez sur le bouton “valider”.
                    <br>Vos devoirs publiés seront visibles et modifiables dans votre profil.</p>
            </div>
            <div class="faq-item">
                <h3>Comment avoir une photo de profil ?</h3>
            </div>
            <div class="faq-item">
                <h3>Comment modifier son profil ?</h3>
            </div>

        </section>

        <!-- Formulaire de contact -->
        <section class="col contact-form">
            <form action="{{ path('app_contact') }}" method="post">
                <h2>D'autres question ? Contactez-nous</h2>
                <!-- Vous pouvez personnaliser l'attribut 'action' pour pointer vers la route qui gère l'envoi du formulaire -->
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Adresse mail : <span style="color: red">*</span></label>
                    <input
                            required
                            placeholder="Votre adresse mail"
                            type="email"
                            class="form-control"
                            id="exampleInputEmail1"
                            aria-describedby="emailHelp"
                    />
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Décrivez votre problème</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
                </div>
                <button type=" submit" class="btn btn-primary" >Envoyer</button>
            </form>
        </section>
        </div>
    </div>
{% endblock %}
